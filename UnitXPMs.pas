procedure UpdateBarImages(NewSize: Integer);

implementation

uses UnitfrmMain, UnitFunctions;

procedure UpdateBarImages(NewSize: Integer);
var StrList: TStringList;
    i: integer;
begin
  StrList := TStringList.Create;
  // Green Graphic
  StrList.SetText(GREEN_XPM);
  StrList[3] := '"    3    ' + IntToStr(NewSize) + '        2            1",';
  while (StrList.Count > 8) do
    StrList.Delete(8); // 9
  for i := 1 to NewSize do
    StrList.Add('"```",');
  StrList.Add('}');
  GREEN_XPM := StrList.GetText;
  frmMain.sciEditor.MarkerDefinePixmap(UNMODIFIED_MARKER, GREEN_XPM);
  // Yellow Graphic
  StrList.SetText(YELLOW_XPM);
  StrList[3] := '"    3    ' + IntToStr(NewSize) + '        2            1",';
  while (StrList.Count > 8) do
    StrList.Delete(8); // 9
  for i := 1 to NewSize do
    StrList.Add('"```",');
  StrList.Add('}');
  YELLOW_XPM := StrList.GetText;
  frmMain.sciEditor.MarkerDefinePixmap(MODIFIED_MARKER, YELLOW_XPM);
  // Free Object
  StrList.Free;
end;

end.
